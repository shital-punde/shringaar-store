<div class="main-account section">
  <div class="page-width">
    <div class="main-account__header">
      <h1 class="main-account__title">{{ 'customer.account.title' | t }}</h1>
      <a href="{{ routes.account_logout_url }}" class="main-account__logout">
        {{ 'customer.log_out' | t }}
      </a>
    </div>

    <div class="main-account__content">
      <div class="main-account__orders">
        <h2 class="main-account__section-title">{{ 'customer.orders.title' | t }}</h2>

        {%- if customer.orders.size > 0 -%}
          <table class="main-account__orders-table">
            <thead>
              <tr>
                <th>{{ 'customer.orders.order_number' | t }}</th>
                <th>{{ 'customer.orders.date' | t }}</th>
                <th>{{ 'customer.orders.payment_status' | t }}</th>
                <th>{{ 'customer.orders.fulfillment_status' | t }}</th>
                <th>{{ 'customer.orders.total' | t }}</th>
              </tr>
            </thead>
            <tbody>
              {%- for order in customer.orders -%}
                <tr>
                  <td>
                    <a href="{{ order.customer_url }}">{{ order.name }}</a>
                  </td>
                  <td>{{ order.created_at | date: format: 'date' }}</td>
                  <td>{{ order.financial_status_label }}</td>
                  <td>{{ order.fulfillment_status_label | default: 'Unfulfilled' }}</td>
                  <td>{{ order.total_price | money }}</td>
                </tr>
              {%- endfor -%}
            </tbody>
          </table>

          {%- if customer.orders.size > 20 -%}
            {% render 'pagination', paginate: paginate %}
          {%- endif -%}
        {%- else -%}
          <p class="main-account__no-orders">{{ 'customer.orders.none' | t }}</p>
        {%- endif -%}
      </div>

      <div class="main-account__details">
        <h2 class="main-account__section-title">{{ 'customer.account.details' | t }}</h2>

        <div class="main-account__info">
          <p>{{ customer.name }}</p>
          <p>{{ customer.email }}</p>
        </div>

        {%- if customer.default_address -%}
          <div class="main-account__address">
            <h3>{{ 'customer.addresses.default' | t }}</h3>
            {{ customer.default_address | format_address }}
          </div>
        {%- endif -%}

        <a href="{{ routes.account_addresses_url }}" class="button button--secondary">
          {{ 'customer.account.view_addresses' | t }}
        </a>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Customer account",
  "tag": "section",
  "class": "section-main-account",
  "settings": []
}
{% endschema %}

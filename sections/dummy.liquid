{{ 'dummy.css' | asset_url | stylesheet_tag }}
<script src='{{ 'dummy.js' | asset_url }}' defer></script>

{% liquid
  assign id = section.id
  assign padding_bottom = section.settings.padding_bottom
  assign padding_top = section.settings.padding_top
  assign wrapper = 'dummy-wrapper-' | append: id
%}

<style>
  .{{wrapper}} {
    padding-top: {{ padding_top }}px;
    padding-bottom: {{ padding_bottom }}px;
  }
</style>

<div class='{{wrapper}}'>
  <div class='dummy-wrapper'>
    dummy
    
  </div>
</div>

{% schema %}
{
  "name": "dummy",
  "class": "dummy",
  "tag": "section",
  "settings": [
    {
      "type": "header",
      "content": "Padding settings"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Top Padding",
      "default": 10
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Bottom Padding",
      "default": 10
    }
  ],
  "presets": [{ "name": "dummy" }]
}
{% endschema %}

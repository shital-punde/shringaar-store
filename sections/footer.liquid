{{ 'section-footer.css' | asset_url | stylesheet_tag }}

<footer class="footer">
  <div class="page-width">
    {%- if section.blocks.size > 0 -%}
      <div class="footer__grid">
        {%- for block in section.blocks -%}
          <div class="footer__block footer__block--{{ block.type }}" {{ block.shopify_attributes }}>
            {%- case block.type -%}
              {%- when 'menu' -%}
                {%- if block.settings.heading != blank -%}
                  <h3 class="footer__heading">{{ block.settings.heading }}</h3>
                {%- endif -%}
                {%- if block.settings.menu != blank -%}
                  <ul class="footer__menu" role="list">
                    {%- for link in block.settings.menu.links -%}
                      <li>
                        <a href="{{ link.url }}" class="footer__link">
                          {{ link.title }}
                        </a>
                      </li>
                    {%- endfor -%}
                  </ul>
                {%- endif -%}

              {%- when 'text' -%}
                {%- if block.settings.heading != blank -%}
                  <h3 class="footer__heading">{{ block.settings.heading }}</h3>
                {%- endif -%}
                {%- if block.settings.text != blank -%}
                  <div class="footer__text rte">
                    {{ block.settings.text }}
                  </div>
                {%- endif -%}

              {%- when 'newsletter' -%}
                {%- if block.settings.heading != blank -%}
                  <h3 class="footer__heading">{{ block.settings.heading }}</h3>
                {%- endif -%}
                {%- if block.settings.text != blank -%}
                  <p class="footer__newsletter-text">{{ block.settings.text }}</p>
                {%- endif -%}
                {%- form 'customer', id: 'FooterNewsletter', class: 'footer__newsletter-form' -%}
                  <input type="hidden" name="contact[tags]" value="newsletter">
                  <div class="footer__newsletter-input-wrapper">
                    <label for="NewsletterEmail" class="visually-hidden">
                      {{ 'newsletter.email_placeholder' | t }}
                    </label>
                    <input
                      type="email"
                      name="contact[email]"
                      id="NewsletterEmail"
                      class="form-input footer__newsletter-input"
                      placeholder="{{ 'newsletter.email_placeholder' | t }}"
                      required
                      autocomplete="email"
                    >
                    <button type="submit" class="button button--primary footer__newsletter-button">
                      {{ 'newsletter.subscribe' | t }}
                    </button>
                  </div>
                  {%- if form.posted_successfully? -%}
                    <p class="footer__newsletter-success">
                      {{ 'newsletter.success' | t }}
                    </p>
                  {%- endif -%}
                {%- endform -%}

              {%- when 'social' -%}
                {%- if block.settings.heading != blank -%}
                  <h3 class="footer__heading">{{ block.settings.heading }}</h3>
                {%- endif -%}
                <ul class="footer__social" role="list">
                  {%- if settings.social_facebook != blank -%}
                    <li>
                      <a href="{{ settings.social_facebook }}" class="footer__social-link" aria-label="Facebook" target="_blank" rel="noopener">
                        {% render 'icon', icon: 'facebook', size: 24 %}
                      </a>
                    </li>
                  {%- endif -%}
                  {%- if settings.social_instagram != blank -%}
                    <li>
                      <a href="{{ settings.social_instagram }}" class="footer__social-link" aria-label="Instagram" target="_blank" rel="noopener">
                        {% render 'icon', icon: 'instagram', size: 24 %}
                      </a>
                    </li>
                  {%- endif -%}
                  {%- if settings.social_twitter != blank -%}
                    <li>
                      <a href="{{ settings.social_twitter }}" class="footer__social-link" aria-label="Twitter" target="_blank" rel="noopener">
                        {% render 'icon', icon: 'twitter', size: 24 %}
                      </a>
                    </li>
                  {%- endif -%}
                  {%- if settings.social_youtube != blank -%}
                    <li>
                      <a href="{{ settings.social_youtube }}" class="footer__social-link" aria-label="YouTube" target="_blank" rel="noopener">
                        {% render 'icon', icon: 'youtube', size: 24 %}
                      </a>
                    </li>
                  {%- endif -%}
                  {%- if settings.social_pinterest != blank -%}
                    <li>
                      <a href="{{ settings.social_pinterest }}" class="footer__social-link" aria-label="Pinterest" target="_blank" rel="noopener">
                        {% render 'icon', icon: 'pinterest', size: 24 %}
                      </a>
                    </li>
                  {%- endif -%}
                  {%- if settings.social_tiktok != blank -%}
                    <li>
                      <a href="{{ settings.social_tiktok }}" class="footer__social-link" aria-label="TikTok" target="_blank" rel="noopener">
                        {% render 'icon', icon: 'tiktok', size: 24 %}
                      </a>
                    </li>
                  {%- endif -%}
                </ul>
            {%- endcase -%}
          </div>
        {%- endfor -%}
      </div>
    {%- endif -%}

    <div class="footer__bottom">
      <div class="footer__copyright">
        <p>&copy; {{ 'now' | date: '%Y' }} {{ shop.name }}. {{ 'footer.copyright' | t }}.</p>
      </div>

      {%- if section.settings.show_payment_icons -%}
        <div class="footer__payment">
          <span class="visually-hidden">{{ 'footer.payment_methods' | t }}</span>
          <ul class="footer__payment-icons" role="list">
            {%- for type in shop.enabled_payment_types -%}
              <li>
                {{ type | payment_type_svg_tag: class: 'footer__payment-icon' }}
              </li>
            {%- endfor -%}
          </ul>
        </div>
      {%- endif -%}
    </div>
  </div>
</footer>

{% schema %}
{
  "name": "Footer",
  "tag": "section",
  "class": "section-footer",
  "settings": [
    {
      "type": "checkbox",
      "id": "show_payment_icons",
      "label": "Show payment icons",
      "default": true
    }
  ],
  "blocks": [
    {
      "type": "menu",
      "name": "Menu",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "Quick links"
        },
        {
          "type": "link_list",
          "id": "menu",
          "label": "Menu",
          "default": "footer"
        }
      ]
    },
    {
      "type": "text",
      "name": "Text",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "About us"
        },
        {
          "type": "richtext",
          "id": "text",
          "label": "Text",
          "default": "<p>Share information about your brand with your customers.</p>"
        }
      ]
    },
    {
      "type": "newsletter",
      "name": "Newsletter",
      "limit": 1,
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "Newsletter"
        },
        {
          "type": "text",
          "id": "text",
          "label": "Text",
          "default": "Subscribe to receive updates, access to exclusive deals, and more."
        }
      ]
    },
    {
      "type": "social",
      "name": "Social media",
      "limit": 1,
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "Follow us"
        },
        {
          "type": "paragraph",
          "content": "Social media links are configured in Theme Settings > Social media"
        }
      ]
    }
  ],
  "default": {
    "blocks": [
      {
        "type": "menu"
      },
      {
        "type": "text"
      },
      {
        "type": "newsletter"
      },
      {
        "type": "social"
      }
    ]
  }
}
{% endschema %}

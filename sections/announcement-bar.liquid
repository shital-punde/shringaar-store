{{ 'section-announcement-bar.css' | asset_url | stylesheet_tag }}

{%- if section.settings.show_announcement -%}
  <div class="announcement-bar color-{{ section.settings.color_scheme }}">
    <div class="page-width">
      <div class="announcement-bar__content">
        {%- if section.settings.link != blank -%}
          <a href="{{ section.settings.link }}" class="announcement-bar__link">
        {%- endif -%}
            <p class="announcement-bar__message">
              {{ section.settings.text | default: 'Welcome to our store' }}
            </p>
        {%- if section.settings.link != blank -%}
          </a>
        {%- endif -%}
      </div>
    </div>
  </div>
{%- endif -%}

{% schema %}
{
  "name": "Announcement bar",
  "tag": "section",
  "class": "section-announcement-bar",
  "settings": [
    {
      "type": "checkbox",
      "id": "show_announcement",
      "label": "Show announcement",
      "default": true
    },
    {
      "type": "text",
      "id": "text",
      "label": "Text",
      "default": "Welcome to our store"
    },
    {
      "type": "url",
      "id": "link",
      "label": "Link"
    },
    {
      "type": "select",
      "id": "color_scheme",
      "label": "Color scheme",
      "options": [
        {
          "value": "primary",
          "label": "Primary"
        },
        {
          "value": "secondary",
          "label": "Secondary"
        },
        {
          "value": "accent",
          "label": "Accent"
        }
      ],
      "default": "primary"
    }
  ]
}
{% endschema %}

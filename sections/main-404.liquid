<div class="main-404 section">
  <div class="page-width">
    <div class="main-404__content">
      <h1 class="main-404__title">{{ '404.title' | t }}</h1>
      <p class="main-404__text">{{ '404.subtext' | t }}</p>
      <a href="{{ routes.root_url }}" class="button button--primary">
        {{ '404.link' | t }}
      </a>
    </div>
  </div>
</div>

<style>
  .main-404 {
    min-height: 50vh;
    display: flex;
    align-items: center;
  }

  .main-404__content {
    text-align: center;
    max-width: 500px;
    margin: 0 auto;
  }

  .main-404__title {
    font-size: 3rem;
    margin-bottom: var(--spacing-md);
  }

  .main-404__text {
    color: var(--color-text-light);
    margin-bottom: var(--spacing-lg);
  }
</style>

{% schema %}
{
  "name": "404 page",
  "tag": "section",
  "class": "section-main-404",
  "settings": []
}
{% endschema %}

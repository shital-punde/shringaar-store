{% comment %}
  Snippet: icon
  Purpose: Renders inline SVG icons

  Parameters:
  - icon: string - Icon name (required)
  - size: number - Icon size in pixels (optional, default: 24)
  - class: string - Additional CSS classes (optional)

  Usage:
  {% render 'icon', icon: 'cart', size: 20, class: 'icon-cart' %}
{% endcomment %}

{%- liquid
  assign icon_size = size | default: 24
  assign icon_class = 'icon icon-' | append: icon
  if class
    assign icon_class = icon_class | append: ' ' | append: class
  endif
-%}

<svg
  class="{{ icon_class }}"
  width="{{ icon_size }}"
  height="{{ icon_size }}"
  viewBox="0 0 24 24"
  fill="none"
  stroke="currentColor"
  stroke-width="2"
  stroke-linecap="round"
  stroke-linejoin="round"
  aria-hidden="true"
  focusable="false"
>
  {%- case icon -%}
    {%- when 'cart' -%}
      <circle cx="9" cy="21" r="1"></circle>
      <circle cx="20" cy="21" r="1"></circle>
      <path d="M1 1h4l2.68 13.39a2 2 0 0 0 2 1.61h9.72a2 2 0 0 0 2-1.61L23 6H6"></path>

    {%- when 'search' -%}
      <circle cx="11" cy="11" r="8"></circle>
      <line x1="21" y1="21" x2="16.65" y2="16.65"></line>

    {%- when 'user' -%}
      <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
      <circle cx="12" cy="7" r="4"></circle>

    {%- when 'menu' -%}
      <line x1="3" y1="12" x2="21" y2="12"></line>
      <line x1="3" y1="6" x2="21" y2="6"></line>
      <line x1="3" y1="18" x2="21" y2="18"></line>

    {%- when 'close' -%}
      <line x1="18" y1="6" x2="6" y2="18"></line>
      <line x1="6" y1="6" x2="18" y2="18"></line>

    {%- when 'chevron-down' -%}
      <polyline points="6 9 12 15 18 9"></polyline>

    {%- when 'chevron-up' -%}
      <polyline points="18 15 12 9 6 15"></polyline>

    {%- when 'chevron-left' -%}
      <polyline points="15 18 9 12 15 6"></polyline>

    {%- when 'chevron-right' -%}
      <polyline points="9 18 15 12 9 6"></polyline>

    {%- when 'arrow-left' -%}
      <line x1="19" y1="12" x2="5" y2="12"></line>
      <polyline points="12 19 5 12 12 5"></polyline>

    {%- when 'arrow-right' -%}
      <line x1="5" y1="12" x2="19" y2="12"></line>
      <polyline points="12 5 19 12 12 19"></polyline>

    {%- when 'plus' -%}
      <line x1="12" y1="5" x2="12" y2="19"></line>
      <line x1="5" y1="12" x2="19" y2="12"></line>

    {%- when 'minus' -%}
      <line x1="5" y1="12" x2="19" y2="12"></line>

    {%- when 'heart' -%}
      <path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z"></path>

    {%- when 'trash' -%}
      <polyline points="3 6 5 6 21 6"></polyline>
      <path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"></path>

    {%- when 'check' -%}
      <polyline points="20 6 9 17 4 12"></polyline>

    {%- when 'facebook' -%}
      <path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"></path>

    {%- when 'instagram' -%}
      <rect x="2" y="2" width="20" height="20" rx="5" ry="5"></rect>
      <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"></path>
      <line x1="17.5" y1="6.5" x2="17.51" y2="6.5"></line>

    {%- when 'twitter' -%}
      <path d="M23 3a10.9 10.9 0 0 1-3.14 1.53 4.48 4.48 0 0 0-7.86 3v1A10.66 10.66 0 0 1 3 4s-4 9 5 13a11.64 11.64 0 0 1-7 2c9 5 20 0 20-11.5a4.5 4.5 0 0 0-.08-.83A7.72 7.72 0 0 0 23 3z"></path>

    {%- when 'youtube' -%}
      <path d="M22.54 6.42a2.78 2.78 0 0 0-1.94-2C18.88 4 12 4 12 4s-6.88 0-8.6.46a2.78 2.78 0 0 0-1.94 2A29 29 0 0 0 1 11.75a29 29 0 0 0 .46 5.33A2.78 2.78 0 0 0 3.4 19c1.72.46 8.6.46 8.6.46s6.88 0 8.6-.46a2.78 2.78 0 0 0 1.94-2 29 29 0 0 0 .46-5.25 29 29 0 0 0-.46-5.33z"></path>
      <polygon points="9.75 15.02 15.5 11.75 9.75 8.48 9.75 15.02"></polygon>

    {%- when 'pinterest' -%}
      <path d="M8 12a4 4 0 1 1 8 0c0 3-2 5-4 7-2-2-4-4-4-7z"></path>
      <path d="M12 2a10 10 0 0 0-3.16 19.46L12 14l3.16 7.46A10 10 0 0 0 12 2z"></path>

    {%- when 'tiktok' -%}
      <path d="M9 12a4 4 0 1 0 4 4V4a5 5 0 0 0 5 5"></path>

    {%- when 'email' -%}
      <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path>
      <polyline points="22,6 12,13 2,6"></polyline>

    {%- when 'phone' -%}
      <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"></path>

    {%- when 'lock' -%}
      <rect x="3" y="11" width="18" height="11" rx="2" ry="2"></rect>
      <path d="M7 11V7a5 5 0 0 1 10 0v4"></path>

    {%- when 'star' -%}
      <polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"></polygon>

    {%- when 'star-filled' -%}
      <polygon fill="currentColor" points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"></polygon>

    {%- when 'filter' -%}
      <polygon points="22 3 2 3 10 12.46 10 19 14 21 14 12.46 22 3"></polygon>

    {%- when 'grid' -%}
      <rect x="3" y="3" width="7" height="7"></rect>
      <rect x="14" y="3" width="7" height="7"></rect>
      <rect x="14" y="14" width="7" height="7"></rect>
      <rect x="3" y="14" width="7" height="7"></rect>

    {%- when 'list' -%}
      <line x1="8" y1="6" x2="21" y2="6"></line>
      <line x1="8" y1="12" x2="21" y2="12"></line>
      <line x1="8" y1="18" x2="21" y2="18"></line>
      <line x1="3" y1="6" x2="3.01" y2="6"></line>
      <line x1="3" y1="12" x2="3.01" y2="12"></line>
      <line x1="3" y1="18" x2="3.01" y2="18"></line>

    {%- else -%}
      {%- comment -%} Default placeholder {%- endcomment -%}
      <circle cx="12" cy="12" r="10"></circle>
  {%- endcase -%}
</svg>
